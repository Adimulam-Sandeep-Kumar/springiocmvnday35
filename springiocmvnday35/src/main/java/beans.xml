<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">


	<bean name = "garden" class = "com.jobiak.ioc.Garden">
	
	<property name = "fruits">
	
		<list>
		
			<value> Mango </value>
			<value> WaterMelon </value>
			<value> Apple </value>
			<value> Orange </value>
			<value> Grapes </value>
					
		</list>
	
	</property>
	
	<property name = "trees">
	
		<set>
		
			<value> Oak Tree </value>
			<value> Neem Tree </value>
			<value> Tamarind Tree </value>
			<value> Banyian Tree </value>
			<value> Lebanon Tree </value>
					
		</set>
	
	</property>
	
	<property name = "cityFruit">
		
		<map>
			<entry key = "hyderabad" value = "custardapple"></entry>
			<entry key = "banginapally" value = "mangoes"></entry>
			<entry key = "narayanpur" value = "grapes"></entry>
			<entry key = "ananthapur" value = "muskmelon"></entry>
			<entry key = "rajahmundry" value = "banana"></entry>	
		</map>
	
	</property>
	
	<constructor-arg name = "flowers">
	
	<list>
	
	<value> Jasmine </value>
	<value> Rose </value>
	<value> Lilly </value>
	<value> Lotus </value>
		
	</list>
		
	</constructor-arg>
		
	</bean>

</beans>
